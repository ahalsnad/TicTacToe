<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <bottom>
        <HBox alignment="CENTER" prefHeight="82.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#restart" text="New Game" textAlignment="CENTER"/>
                <Button mnemonicParsing="false" onAction="#replay" text="Play Again?" translateX="5.0"/>
                <Button mnemonicParsing="false" onAction="#close" text="Exit" translateX="10.0"/>
            </children>
        </HBox>
    </bottom>
    <center>
        <Label fx:id="message" text="Label" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
